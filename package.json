{
  "author": "Rohith Kumar E S",
  "description": "This project is for Backend Service with accepts only RestAPI Communication.",
  "name": "rest-api-backend",
  "main": "app.js",
  "license": "ISC",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run clean && babel --ignore '**/*.test.js' -d ./build ./src",
    "clean": "rm -rf build && rm -rf coverage && rm -rf logs",
    "dev": "nodemon --exec babel-node ./src/bin/www",
    "lint": "eslint src/**",
    "list": "pm2 list",
    "restart": "pm2 restart all",
    "start": "pm2 start ./build/bin/www.js --name 'Backend Server' -i max",
    "stop": "pm2 stop all",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --detectOpenHandles --watch"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "setupFiles": [
      "./src/middleware/jestSetup.js"
    ],
    "testPathIgnorePatterns": [
      "/build",
      "/coverage",
      "/node_modules"
    ]
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "~4.16.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongodb": "^3.3.4",
    "multer": "^1.4.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pm2": "^4.2.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/runtime": "^7.7.4",
    "babel-plugin-minify-builtins": "^0.5.0",
    "babel-plugin-minify-constant-folding": "^0.5.0",
    "babel-plugin-minify-simplify": "^0.5.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-preset-minify": "^0.5.1",
    "debug": "~2.6.9",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "supertest": "^4.0.2"
  }
}